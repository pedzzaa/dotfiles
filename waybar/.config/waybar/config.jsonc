{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 50,
  "modules-left": [
    "custom/launch_wofi",
    "hyprland/workspaces",
    "cpu",
    "memory",
    "disk",
    "hyprland/window",
  ],
  "modules-center": ["custom/lock_screen", "clock", "custom/power_btn"],
  "modules-right": [
    "hyprland/language",
    "battery",
    "backlight",
    "pulseaudio",
    "pulseaudio#microphone",
    "tray",
    "custom/weather",
    "custom/light_dark",
  ],

  "hyprland/window": {
    "format": "{}",
  },

  "custom/launch_wofi": {
    "format": "ÔåÉ",
    "on-click": "pkill wofi; wofi -n",
    "tooltip": false,
  },

  "custom/lock_screen": {
    "format": "ÔÄ£",
    "on-click": "sh -c '(sleep 0.5s; swaylock)' & disown",
    "tooltip": false,
  },

  "custom/light_dark": {
    "format": "Û∞êæ",
    "on-click": "~/.config/waybar/scripts/baraction light",
    "tooltip": false,
  },

  "custom/power_btn": {
    "format": "ÔÄë ",
    "on-click": "zsh -c poweroff & disown",
    "tooltip": false,
  },

  "cpu": {
    "interval": 10,
    "format": "Ôãõ {usage}%",
    "max-length": 10,
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'",
  },

  "disk": {
    "interval": 30,
    "format": "Û∞ãä {percentage_used}%",
    "path": "/",
    "tooltip": true,
    "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'",
  },

  "memory": {
    "interval": 30,
    "format": "ÔÉâ {}%",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used",
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'",
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
      "9": [],
    },
  },

  "custom/weather": {
    "tooltip": true,
    "format": "{}",
    "interval": 30,
    "exec": "~/.config/waybar/scripts/waybar-wttr.py",
    "return-type": "json",
  },

  "hyprland/language": {
    "format": "{}",
    //"format-en": "WTF IS A KILOMETER!!! ü¶Öü¶Öü¶Ö",
    "format-en": "üá∫üá∏ US",
    "format-sr": "üá≤üá™ ME",
    "keyboard-name": "at-translated-set-2-keyboard",
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10,
  },

  "clock": {
    "format": "{:%H:%M  ÔÅ≥ %A, %B %e %Y}",
  },

  "backlight": {
    "device": "amdgpu",
    "format": "{icon} {percent}%",
    "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
    "on-scroll-up": "brightnessctl set 5%+",
    "on-scroll-down": "brightnessctl set 5%-",
    "min-length": 6,
  },

  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20,
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶  ",
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pamixer -i 5",
    "on-scroll-down": "pamixer -d 5",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "ÔÄ• ",
      "headset": "ÔÄ• ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "],
    },
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± ",
    "on-click": "pamixer --default-source -t",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "scroll-step": 5,
  },
}
